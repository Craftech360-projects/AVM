<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ib_dialog_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.instabug.library.view.viewgroup.IBPercentageRelativeLayout
        android:id="@+id/instabug_main_prompt_container"
        android:layout_width="@dimen/ib_core_dialog_width_default"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/ibg_core_bg_card"
        android:paddingLeft="24dp"
        android:paddingTop="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="8dp"
        app:maxHeightRatio="75">

        <LinearLayout
            android:id="@+id/layout_title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ib_core_dimen_8"
            android:background="@android:color/transparent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/instabug_fragment_title"
                style="@style/InstabugToolbarTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="65"
                android:clickable="true"
                android:ellipsize="end"
                android:focusable="true"
                android:gravity="center_vertical|start"
                android:maxLines="2"
                tools:text="Manaomia le Fesoasoani?" />

            <RelativeLayout
                android:id="@+id/instabug_chats_list_icon_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="35"
                android:clickable="true"
                android:focusable="true"
                android:gravity="end"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/instabug_chats_list_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/instabug_str_conversations"
                    android:paddingTop="@dimen/ib_core_padding_xsmall"
                    android:paddingEnd="@dimen/ib_core_padding_xsmall"
                    android:paddingRight="@dimen/ib_core_padding_xsmall"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ibg_core_ic_talk_to_us" />

                <TextView
                    android:id="@+id/instabug_notification_count"
                    style="@style/InstabugNotificationCountIcon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignTop="@id/instabug_chats_list_icon"
                    android:layout_alignEnd="@id/instabug_chats_list_icon"
                    android:layout_alignRight="@id/instabug_chats_list_icon"
                    android:gravity="center"
                    android:textSize="12sp"
                    tools:background="#c53a41"
                    tools:text="5"
                    tools:textColor="#ffffff" />
            </RelativeLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/instabug_prompt_options_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_title_container"
            android:layout_centerInParent="true"
            android:divider="@null"
            android:dividerHeight="0dp">

        </ListView>

        <Button
            android:id="@+id/instabug_prompt_cancel_btn"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/instabug_prompt_options_list_view"
            android:text="@android:string/cancel"
            android:textAllCaps="false" />
    </com.instabug.library.view.viewgroup.IBPercentageRelativeLayout>

    <include
        layout="@layout/instabug_lyt_pbi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instabug_main_prompt_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />
</RelativeLayout>