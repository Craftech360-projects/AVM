<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/instabug_survey_dialog_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?attr/survey_container_bg"
        android:gravity="center">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/survey_shadow"
            android:layout_centerHorizontal="true"
            android:background="?attr/survey_container_bg"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <!-- close button used in partial view -->
            <include layout="@layout/item_close_survey_button" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/imgLayout"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="24dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/instabug_img_thanks"
                    android:layout_width="104dp"
                    android:layout_height="104dp"
                    android:padding="4dp"
                    android:screenReaderFocusable="false"
                    android:importantForAccessibility="no"
                    android:background="@drawable/ibg_survey_ic_thanks_background"
                    android:src="@drawable/ibg_survey_ic_survey_thankyou"
                    tools:targetApi="p" />
            </LinearLayout>

                <LinearLayout
                    android:id="@+id/thanks_container_layout"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="24dp"
                    android:orientation="vertical"
                    android:focusedByDefault="true"
                    android:focusableInTouchMode="true"
                    android:screenReaderFocusable="true"
                    android:importantForAccessibility="yes">

                    <TextView
                        android:id="@+id/txt_rate_us_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/instabug_custom_survey_thanks_title"
                        android:importantForAccessibility="no"
                        android:screenReaderFocusable="false"
                        android:textColor="#006FFF"
                        android:textSize="@dimen/ib_survey_thanks_title" />

                    <TextView
                        android:id="@+id/txt_rate_us_question"
                        style="@style/InstabugSurveyThanksMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:importantForAccessibility="no"
                        android:screenReaderFocusable="false"
                        android:text="@string/instabug_custom_survey_thanks_subtitle" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <include
            layout="@layout/instabug_lyt_pbi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp" />
    </RelativeLayout>

</RelativeLayout>