<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/instabug_prompt_option_container"
    style="@style/InstabugDialogItemContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="56dp"
    >

    <ImageView
        android:id="@+id/instabug_prompt_option_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_gravity="top"
        android:layout_marginTop="@dimen/ib_core_margin_top_prompt_option_icon"
        android:layout_marginEnd="@dimen/ib_core_margin_right_prompt_option_icon_default"
        android:layout_marginRight="@dimen/ib_core_margin_right_prompt_option_icon_default"
        android:layout_marginBottom="0dp"
        android:padding="0dp"
        android:tint="?attr/instabug_theme_tinting_color"
        tools:background="@tools:sample/avatars"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:focusable="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/instabug_prompt_option_title"
            style="@style/InstabugDialogItemText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Report a problem" />

        <TextView
            android:id="@+id/instabug_prompt_option_description"
            style="@style/InstabugDialogItemDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="Report a problem description" />
    </LinearLayout>
</LinearLayout>

