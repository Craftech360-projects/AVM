<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ib_chat_container_message_list_item_img"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    tools:targetApi="jelly_bean_mr1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <com.instabug.library.ui.custom.CircularImageView
            android:id="@+id/instabug_img_message_sender"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:scaleType="centerCrop"
            android:src="@drawable/ibg_core_ic_avatar" />

        <ImageView
            android:id="@+id/instabug_img_attachment"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="-10dp"
            android:layout_marginLeft="-10dp"
            android:background="@drawable/ibg_core_chat_bubble_received"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/ibg_chat_img_placeholder" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:gravity="bottom">

        <TextView
            android:id="@+id/instabug_txt_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/instabug_text_color_grey"
            android:textSize="@dimen/instabug_date_text_size"
            tools:text="09:41 AM" />
    </LinearLayout>

</LinearLayout>