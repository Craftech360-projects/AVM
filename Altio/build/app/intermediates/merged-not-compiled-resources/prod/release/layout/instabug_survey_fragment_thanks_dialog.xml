<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="48dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?attr/survey_container_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="8dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:background="?attr/survey_container_bg"

            android:layout_height="wrap_content">

            <include layout="@layout/item_close_survey_button" />
        </FrameLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?attr/survey_container_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <ImageView
                android:id="@+id/instabug_img_thanks"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:layout_marginBottom="32dp"
                android:src="@drawable/ibg_survey_ic_survey_thankyou"
                tools:background="@drawable/ibg_survey_ic_thanks_background" />

            <TextView
                android:id="@+id/txt_thanks_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:textColor="@color/instabug_text_color_light_grey"
                android:textSize="@dimen/ib_survey_thanks_title"
                tools:text="@string/instabug_custom_survey_thanks_title" />

            <TextView
                android:id="@+id/txtSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="84dp"
                android:layout_marginRight="84dp"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/instabug_text_color_light_grey"
                android:textSize="@dimen/ib_survey_thanks_subtitle"
                tools:text="@string/instabug_custom_survey_thanks_subtitle" />

        </LinearLayout>

        <include
            layout="@layout/instabug_lyt_pbi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>