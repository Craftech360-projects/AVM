<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mcq_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ibg_survey_mcq_item_background"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/instabug_container_padding"
    android:focusable="true"

    android:paddingRight="@dimen/instabug_container_padding">

    <ImageView
        tools:background="@drawable/ibg_survey_ic_mcq_selected"
        tools:src="@drawable/ibg_ic_survey_img_selected"
        android:id="@+id/selector_img"
        android:layout_width="32dp"
        android:focusable="false"
        android:contentDescription="@null"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical" />

    <TextView
        android:id="@+id/survey_optional_answer_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/instabug_container_padding"
        android:layout_marginRight="@dimen/instabug_container_padding"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:contentDescription="@null"
        android:textColor="#E6505B63"
        android:textSize="16sp"
        android:labelFor="@id/selector_img"
        tools:text="Choice 1" />
</LinearLayout>