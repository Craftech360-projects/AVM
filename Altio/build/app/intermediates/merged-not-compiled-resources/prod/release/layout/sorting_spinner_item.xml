<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgSortActions"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:padding="0dp"
        android:textColor="@color/instabug_theme_tinting_color_dark"
        android:tint="@color/instabug_theme_tinting_color_dark"
        app:srcCompat="@drawable/ibg_fr_ic_sort" />

    <TextView
        android:id="@+id/spinnerItemTextView"
        style="@style/InstabugTopDialogButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/imgSortActions"
        android:layout_toLeftOf="@+id/imgSortActions"
        android:gravity="end"
        android:textColor="@color/instabug_theme_tinting_color_dark"
        android:textSize="11sp"
        android:textStyle="normal"
        android:tint="@color/instabug_theme_tinting_color_dark"
        tools:text="Recent" />

</RelativeLayout>