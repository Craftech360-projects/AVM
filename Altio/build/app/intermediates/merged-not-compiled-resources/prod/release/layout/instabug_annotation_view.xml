<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/annotation_container"
    style="@style/InstabugBaseContainer"
    android:background="@android:color/transparent"
    android:layout_gravity="center">

    <FrameLayout
        android:id="@+id/instabug_annotation_image_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/divider"
        android:padding="8dp">

        <FrameLayout
            android:id="@+id/instabug_annotation_image_border"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <com.instabug.chat.annotation.AnnotationView
                android:focusable="true"
                android:id="@+id/instabug_annotation_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:contentDescription="@string/ScreenShot_Image"
                android:scaleType="fitCenter" />

        </FrameLayout>

    </FrameLayout>

    <com.instabug.chat.annotation.ColorPickerPopUpView
        android:id="@+id/instabug_color_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/instabug_annotation_actions_container"
        android:layout_marginBottom="-2dp"
        android:visibility="gone"
        app:view_orientation="horizontal" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/instabug_annotation_actions_container"
        android:background="?attr/instabug_divider_color" />

    <com.instabug.chat.annotation.ShapeSuggestionsLayout
        android:id="@+id/shapeSuggestionsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/divider"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:id="@+id/instabug_annotation_actions_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="?attr/instabug_primary_color"
        android:gravity="center|bottom"
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:weightSum="4">

        <RelativeLayout
            android:id="@+id/icon_brush_layout"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:contentDescription="@string/ibg_bug_annotation_brush_content_description"
                android:id="@+id/icon_brush"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:clickable="false"
                android:gravity="center"
                android:padding="0dp"
                android:textColor="?attr/instabug_theme_tinting_color"
                android:textSize="26sp"
                app:srcCompat="@drawable/ibg_chat_ic_annotation_brush" />

            <View
                android:id="@+id/brush_indicator"
                android:layout_width="22dp"
                android:layout_height="2dp"
                android:layout_alignLeft="@+id/icon_brush"
                android:layout_below="@id/icon_brush"
                android:background="@color/instabug_annotation_color_red" />
        </RelativeLayout>


        <ImageView
            android:contentDescription="@string/ibg_bug_annotation_magnify_content_description"
            android:id="@+id/icon_magnify"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="11dp"
            android:textColor="?attr/instabug_theme_tinting_color"
            android:textSize="26sp"
            app:srcCompat="@drawable/ibg_chat_ic_annotation_zoom" />

        <ImageView
            android:contentDescription="@string/ibg_bug_annotation_blur_content_description"
            android:id="@+id/icon_blur"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="11dp"
            android:textColor="?attr/instabug_theme_tinting_color"
            android:textSize="26sp"
            app:srcCompat="@drawable/ibg_chat_ic_annotation_blur" />

        <ImageView
            android:contentDescription="@string/ibg_bug_annotation_undo_content_description"
            android:id="@+id/icon_undo"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="11dp"
            android:textColor="?attr/instabug_theme_tinting_color"
            android:textSize="26sp"
            app:srcCompat="@drawable/ibg_chat_ic_annotation_undo" />


    </LinearLayout>

</RelativeLayout>